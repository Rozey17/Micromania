<Window x:Class="Micromania.Presentation.View.Crud"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Crud" Height="450" Width="600">
    <StackPanel>
        <Button Content="Application" Width="70" Click="Button_Click"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Margin=" 10" Width=" 300"/>
            <Button Grid.Column="2" Content="Create new client" Margin=" 10"/>
            
        </Grid>
    </StackPanel>


</Window>
